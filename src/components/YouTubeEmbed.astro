---
export interface Props {
  videoId: string;
  title?: string;
}

const { videoId, title = 'YouTube Video' } = Astro.props;
---

<div class="youtube-embed">
  <div class="embed-container">
    <iframe 
      src={`https://www.youtube.com/embed/${videoId}`}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      loading="lazy">
    </iframe>
  </div>
  <div class="embed-caption">
    <span class="embed-icon">ðŸ“º</span>
    <span class="embed-text">YouTube Video</span>
  </div>
</div>

<style>
  .youtube-embed {
    margin: 32px 0;
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--hover);
  }

  .embed-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
  }

  .embed-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .embed-caption {
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--hover);
    border-top: 1px solid var(--border);
  }

  .embed-icon {
    font-size: 16px;
  }

  .embed-text {
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .youtube-embed {
      margin: 24px 0;
    }
  }
</style>