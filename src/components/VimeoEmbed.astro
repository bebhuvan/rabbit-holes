---
export interface Props {
  url: string;
  title?: string;
}

const { url, title = 'Vimeo Video' } = Astro.props;

// Extract Vimeo video ID from URL
function getVimeoId(url: string): string | null {
  const match = url.match(/vimeo\.com\/(?:.*#|.*\/videos\/)?([0-9]+)/);
  return match ? match[1] : null;
}

const videoId = getVimeoId(url);
---

{videoId ? (
  <div class="vimeo-embed">
    <div class="embed-container">
      <iframe 
        src={`https://player.vimeo.com/video/${videoId}?color=fb923c&title=0&byline=0&portrait=0`}
        title={title}
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        loading="lazy">
      </iframe>
    </div>
    <div class="embed-caption">
      <span class="embed-icon">ðŸŽ¬</span>
      <span class="embed-text">Vimeo Video</span>
    </div>
  </div>
) : (
  <div class="vimeo-embed">
    <div class="embed-fallback">
      <p>Vimeo video: <a href={url} target="_blank" rel="noopener noreferrer">{url}</a></p>
    </div>
  </div>
)}

<style>
  .vimeo-embed {
    margin: var(--space-xl) 0;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--color-surface);
  }

  .embed-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
  }

  .embed-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .embed-caption {
    padding: var(--space-sm) var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-surface);
  }

  .embed-icon {
    font-size: var(--text-base);
  }

  .embed-text {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    font-weight: 500;
  }

  .embed-fallback {
    padding: var(--space-lg);
    text-align: center;
  }

  .embed-fallback a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .embed-fallback a:hover {
    text-decoration: underline;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .vimeo-embed {
      margin: var(--space-lg) 0;
    }
  }
</style>