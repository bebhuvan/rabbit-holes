---
export interface Props {
  url: string;
  theme?: 'light' | 'dark';
}

const { url, theme = 'light' } = Astro.props;

// Extract tweet ID from URL - supports both twitter.com and x.com
function getTweetId(url: string): string | null {
  const match = url.match(/(twitter\.com|x\.com)\/[^\/]+\/status\/(\d+)/);
  return match ? match[2] : null;
}

const tweetId = getTweetId(url);
---

{tweetId ? (
  <div class="twitter-embed">
    <blockquote class="twitter-tweet" data-theme={theme}>
      <a href={url}>Loading tweet...</a>
    </blockquote>
    <div class="embed-caption">
      <span class="embed-icon">üê¶</span>
      <span class="embed-text">Twitter/X Post</span>
    </div>
  </div>
) : (
  <div class="twitter-embed">
    <div class="embed-fallback">
      <p>Twitter/X post: <a href={url} target="_blank" rel="noopener noreferrer">{url}</a></p>
    </div>
  </div>
)}

<style>
  .twitter-embed {
    margin: 32px 0;
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--hover);
  }

  .twitter-tweet {
    margin: 0 !important;
    border-radius: 8px 8px 0 0 !important;
  }

  .embed-caption {
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--hover);
    border-top: 1px solid var(--border);
  }

  .embed-icon {
    font-size: 16px;
  }

  .embed-text {
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
  }

  .embed-fallback {
    padding: 20px;
    text-align: center;
  }

  .embed-fallback a {
    color: var(--accent);
    text-decoration: none;
  }

  .embed-fallback a:hover {
    text-decoration: underline;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .twitter-embed {
      margin: 24px 0;
    }
  }
</style>

<script>
  // Load Twitter widgets script
  if (typeof window !== 'undefined') {
    window.twttr = (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0],
        t = window.twttr || {};
      if (d.getElementById(id)) return t;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js, fjs);

      t._e = [];
      t.ready = function(f) {
        t._e.push(f);
      };

      return t;
    }(document, "script", "twitter-wjs"));
  }
</script>