---
export const prerender = true;

import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const posts = await getCollection('posts', ({ data }) => {
  return data.published !== false;
});

// Get all tags with their frequencies
const tagFrequency = posts.reduce((acc, post) => {
  (post.data.tags || []).forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// Sort tags by frequency
const sortedTags = Object.entries(tagFrequency)
  .sort(([,a], [,b]) => b - a);

const topTags = sortedTags.slice(0, 5);
---

<Base title="Topics — Rabbit Holes" description="Browse ideas by topic">
  <div class="tags-page">

    <header class="page-header">
      <div class="header-symbol"></div>
      <h1 class="page-title">Topics</h1>
      <p class="page-subtitle">Wander through {Object.keys(tagFrequency).length} topics across {posts.length} ideas</p>
    </header>

    <div class="main-layout">

      <section class="tags-content">
        <h2 class="section-label">All Topics</h2>
        <div class="tags-list">
          {sortedTags.map(([tag, count]) => (
            <a href={`/tags/${tag}`} class="tag-item">
              <span class="tag-name">{tag}</span>
              <span class="tag-count">{count}</span>
            </a>
          ))}
        </div>
      </section>

      <aside class="tags-sidebar">
        <div class="sidebar-section stats-section">
          <div class="stat">
            <span class="stat-num">{Object.keys(tagFrequency).length}</span>
            <span class="stat-label">Topics</span>
          </div>
          <div class="stat">
            <span class="stat-num">{posts.length}</span>
            <span class="stat-label">Ideas</span>
          </div>
        </div>

        <div class="sidebar-section">
          <div class="sidebar-title">Most Explored</div>
          <div class="popular-list">
            {topTags.map(([tag, count], i) => (
              <a href={`/tags/${tag}`} class="popular-item">
                <span class="popular-rank">{i + 1}</span>
                <span class="popular-name">{tag}</span>
                <span class="popular-count">{count}</span>
              </a>
            ))}
          </div>
        </div>

        <div class="sidebar-section">
          <div class="sidebar-title">Navigation</div>
          <div class="nav-links">
            <a href="/archive" class="nav-link">
              <span>Archive</span>
              <span class="nav-arrow">→</span>
            </a>
            <a href="/" class="nav-link">
              <span>Home</span>
              <span class="nav-arrow">→</span>
            </a>
          </div>
        </div>
      </aside>

    </div>

  </div>

  <style>
    .tags-page {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 2.5rem 4rem;
    }

    /* Page Header */
    .page-header {
      padding: 3.5rem 0;
      text-align: center;
      border-bottom: 3px solid var(--color-text-primary);
    }

    .header-symbol {
      width: 48px;
      height: 48px;
      margin: 0 auto 1.25rem;
      position: relative;
      display: inline-block;
    }

    .header-symbol::before {
      content: '';
      position: absolute;
      inset: 0;
      border: 2px solid var(--color-text-primary);
      border-radius: 50%;
      opacity: 0.4;
    }

    .header-symbol::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 8px;
      height: 8px;
      background: var(--purple);
      border-radius: 50%;
      transform: translate(-50%, -50%);
    }

    .page-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 700;
      line-height: 1.05;
      letter-spacing: -0.03em;
      margin-bottom: 0.5rem;
    }

    .page-subtitle {
      font-family: 'Newsreader', Georgia, serif;
      font-size: 1.1rem;
      font-style: italic;
      color: var(--color-text-tertiary);
    }

    /* Main Layout */
    .main-layout {
      display: grid;
      grid-template-columns: 1fr 260px;
      gap: 4rem;
      padding-top: 3rem;
    }

    /* Tags Content */
    .section-label {
      font-family: 'Space Mono', monospace;
      font-size: 0.6rem;
      font-weight: 700;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--color-text-light);
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--color-border);
    }

    .tags-list {
      display: flex;
      flex-direction: column;
    }

    .tag-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0;
      padding-left: 1rem;
      border-bottom: 1px solid var(--color-border);
      border-left: 3px solid transparent;
      text-decoration: none;
      transition: all 0.25s ease;
    }

    .tag-item:last-child {
      border-bottom: none;
    }

    .tag-item:hover {
      border-left-color: var(--purple);
      padding-left: 1.5rem;
      background: var(--color-surface-warm);
      margin: 0 -1rem;
      padding-right: 1rem;
    }

    .tag-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--color-text-primary);
      transition: color 0.2s;
    }

    .tag-item:hover .tag-name {
      color: var(--purple);
    }

    .tag-count {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      font-weight: 700;
      color: var(--color-text-light);
      background: var(--color-surface);
      padding: 0.35rem 0.75rem;
    }

    /* Sidebar */
    .tags-sidebar {
      position: sticky;
      top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .sidebar-section {
      padding: 1.25rem;
      background: var(--color-surface);
    }

    .sidebar-title {
      font-family: 'Space Mono', monospace;
      font-size: 0.58rem;
      font-weight: 700;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      color: var(--color-text-tertiary);
      margin-bottom: 1rem;
    }

    .stats-section {
      display: flex;
      gap: 1.5rem;
    }

    .stat {
      text-align: center;
      flex: 1;
    }

    .stat-num {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--purple);
      display: block;
      line-height: 1;
    }

    .stat-label {
      font-family: 'Space Mono', monospace;
      font-size: 0.55rem;
      font-weight: 700;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--color-text-light);
      margin-top: 0.35rem;
      display: block;
    }

    .popular-list {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .popular-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.6rem 0.75rem;
      text-decoration: none;
      transition: all 0.2s;
    }

    .popular-item:hover {
      background: var(--color-bg);
    }

    .popular-rank {
      font-family: 'Space Mono', monospace;
      font-size: 0.65rem;
      font-weight: 700;
      color: var(--color-text-light);
      width: 1.25rem;
    }

    .popular-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 0.9rem;
      font-weight: 600;
      color: var(--color-text-secondary);
      flex: 1;
      transition: color 0.2s;
    }

    .popular-item:hover .popular-name {
      color: var(--purple);
    }

    .popular-count {
      font-family: 'Space Mono', monospace;
      font-size: 0.6rem;
      color: var(--color-text-light);
    }

    .nav-links {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .nav-link {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.65rem 0.75rem;
      font-family: 'Space Mono', monospace;
      font-size: 0.72rem;
      font-weight: 700;
      color: var(--color-text-secondary);
      text-decoration: none;
      transition: all 0.2s;
    }

    .nav-link:hover {
      background: var(--color-bg);
      color: var(--color-text-primary);
    }

    .nav-arrow {
      color: var(--color-text-light);
      transition: transform 0.2s;
    }

    .nav-link:hover .nav-arrow {
      transform: translateX(3px);
      color: var(--orange);
    }

    /* Responsive */
    @media (max-width: 900px) {
      .main-layout {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .tags-sidebar {
        position: static;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      .stats-section {
        grid-column: span 2;
      }
    }

    @media (max-width: 600px) {
      .tags-page {
        padding: 0 1.5rem 3rem;
      }

      .page-header {
        padding: 2.5rem 0;
      }

      .tag-item {
        padding: 0.85rem 0;
        padding-left: 0.75rem;
      }

      .tag-item:hover {
        margin: 0 -0.75rem;
        padding-right: 0.75rem;
      }

      .tags-sidebar {
        grid-template-columns: 1fr;
      }

      .stats-section {
        grid-column: span 1;
      }
    }
  </style>
</Base>
