---
export const prerender = true;

import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import { calculateReadingTime } from '../utils/shared';

const posts = await getCollection('posts', ({ data }) => {
  return data.published !== false;
});

const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const feedPosts = sortedPosts.slice(0, 5);

// Favorites
const favoritesSlugs = ['why-read', 'the-weight-of-telling-stories', 'we-are-borrowed-stardust', 'zero-sum-thinking-is-ruining-the-world'];
const favorites = favoritesSlugs.map(slug => sortedPosts.find(p => p.slug.includes(slug))).filter(Boolean).slice(0, 4);
while (favorites.length < 4 && sortedPosts.length > favorites.length) {
  const post = sortedPosts.find(p => !favorites.includes(p));
  if (post) favorites.push(post);
}

const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags || []))];
const topTags = allTags.slice(0, 8);

function getReadingDots(body: string) {
  const minutes = calculateReadingTime(body || '');
  return { filled: Math.min(Math.ceil(minutes / 2), 5), minutes };
}

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}
