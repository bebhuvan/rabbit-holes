export const prerender = true;

import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import { calculateReadingTime } from '../utils/shared';

const posts = await getCollection('posts', ({ data }) => {
  return data.published !== false;
});

const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const feedPosts = sortedPosts.slice(0, 5);

// Favorites
const favoritesSlugs = ['why-read', 'the-weight-of-telling-stories', 'we-are-borrowed-stardust', 'zero-sum-thinking-is-ruining-the-world'];
const favorites = favoritesSlugs.map(slug => sortedPosts.find(p => p.slug.includes(slug))).filter(Boolean).slice(0, 4);
while (favorites.length < 4 && sortedPosts.length > favorites.length) {
  const post = sortedPosts.find(p => !favorites.includes(p));
  if (post) favorites.push(post);
}

const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags || []))];

// Count posts per tag for "Most Explored"
const tagCounts = sortedPosts.reduce((acc, post) => {
  (post.data.tags || []).forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

const topTags = Object.entries(tagCounts)
  .sort(([,a], [,b]) => b - a)
  .slice(0, 8)
  .map(([tag]) => tag);

const mostExplored = Object.entries(tagCounts)
  .sort(([,a], [,b]) => b - a)
  .slice(0, 5);

function getReadingDots(body: string) {
  const minutes = calculateReadingTime(body || '');
  return { filled: Math.min(Math.ceil(minutes / 2), 5), minutes };
}

// Count external links in post body to find "deep holes"
function countLinks(body: string): number {
  const linkRegex = /\[([^\]]+)\]\(https?:\/\/[^)]+\)/g;
  const matches = body?.match(linkRegex) || [];
  return matches.length;
}

// Categorize posts: deep holes (many links/long) vs quick reads
const deepHoles = sortedPosts
  .map(post => ({
    post,
    links: countLinks(post.body || ''),
    minutes: calculateReadingTime(post.body || '')
  }))
  .filter(p => p.links >= 3 || p.minutes >= 5)
  .sort((a, b) => (b.links + b.minutes) - (a.links + a.minutes))
  .slice(0, 3);

const quickReads = sortedPosts
  .filter(post => calculateReadingTime(post.body || '') <= 2)
  .slice(0, 3);

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}
