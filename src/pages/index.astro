<script define:vars={{
  allPosts: sortedPosts.map(p => ({ slug: p.slug })),
  deepPosts: deepHoles.map(d => ({ slug: d.post.slug })),
  quickPosts: quickReads.map(p => ({ slug: p.slug }))
}}>
  // Random post functionality
  function goToRandom(posts) {
    if (posts.length === 0) return;
    const randomIndex = Math.floor(Math.random() * posts.length);
    window.location.href = `/posts/${posts[randomIndex].slug}`;
  }

  // Hero random button
  document.getElementById('randomBtn')?.addEventListener('click', (e) => {
    e.preventDefault();
    goToRandom(allPosts);
  });

  // Sidebar random buttons
  document.querySelectorAll('.random-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const type = btn.getAttribute('data-type');
      if (type === 'deep') goToRandom(deepPosts);
      else if (type === 'quick') goToRandom(quickPosts);
      else goToRandom(allPosts);
    });
  });
</script>
